<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.mgoll.bingoaccesible.presentador.EmpezarFragment">

    <RelativeLayout
        android:id="@+id/layout_bombo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light">

        <ImageButton
            android:id="@+id/boton_empezar"
            android:layout_width="100dp"
            android:layout_height="135dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/ic_media_play" />
        <Button
            android:id="@+id/boton_siguiente_des"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/boton_continuar"
            android:layout_alignTop="@+id/boton_anterior"
            android:text="siguiente" />

        <Button
            android:id="@+id/boton_anterior_des"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Atras" />

        <Button
            android:id="@+id/boton_parar_des"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Parar"
            android:layout_alignBottom="@+id/boton_empezar"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/boton_continuar_des"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="continuar"
            android:layout_alignBottom="@+id/boton_empezar"
            android:layout_alignParentEnd="true" />

        <!-- AquÃ­ tenemos que cargar los nÃºmeros desde el bombo activity-->

    </RelativeLayout>

</FrameLayout>
