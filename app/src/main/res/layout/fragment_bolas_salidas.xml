<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    tools:context="com.mgoll.bingoaccesible.presentador.BolasSalidasFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/rl_bolas_salidas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_bolassalidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/boton_mostrartodos"/>

        <Button
            android:id="@+id/boton_mostrartodos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:elevation="24dp"
            android:text="Mostrar bolas salidas"
            android:textAlignment="center" />
        <!--  android:layout_below="@+id/rv_bolassalidas"-->
    </RelativeLayout>

</FrameLayout>
